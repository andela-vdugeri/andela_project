
<div id="login_page">
<form method="post" action="/login">
<% if @message %>
<h2><%=@message %></h2>
<%end%>
  <h2><span class="entypo-login"></span> Login</h2>
  <button class="submit"><span class="entypo-lock"></span></button>
  <span class="entypo-user inputUserIcon"></span>
  <input type="text" class="user" placeholder="ursername"  name="username" />
  <span class="entypo-key inputPassIcon"></span>
  <input type="password" class="pass"placeholder="password" name="password" />
</form>
</div>